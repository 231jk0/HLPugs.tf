{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "typeRoots": ["custom"],
    "lib": ["es6", "es5"],
    "declaration": true,
    "declarationMap": true,
  },
  "include": [
    "src/**/*"
  ]
}
